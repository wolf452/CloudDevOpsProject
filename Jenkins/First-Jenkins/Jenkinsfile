@Library('my-shared-library') _

pipeline {
    agent any

    environment {
        TERRAFORM_DIR = 'terraform'
        BACKEND_DIR = 'terraform'
        ANSIBLE_DIR = 'ansible'
        INVENTORY_FILE = 'inventory'
        AWS_ACCESS_KEY_ID = credentials('aws-access-key')  
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')  
        AWS_REGION = 'us-east-1'
    }

    stages {
        stage('Checkout') {
            steps {
                checkoutStage(gitBranch: 'main', gitUrl: 'https://github.com/wolf452/FinalProjectCode.git')
            }
        }

        stage('Terraform Init') {
            steps {
                terraformInitStage(terraformDir: TERRAFORM_DIR, awsCredentialsId: 'aws-cred')
            }
        }

        stage('Terraform Plan') {
            steps {
                terraformPlanStage(terraformDir: TERRAFORM_DIR)
            }
        }

        stage('Terraform Apply') {
            steps {
                terraformApplyStage(terraformDir: TERRAFORM_DIR)
            }
        }

        stage('Delay Before Ansible Playbook') {
            steps {
                delayBeforeAnsibleStage(delayMinutes: 1)
            }
        }

        stage('Run Ansible') {
            steps {
                ansibleStage(ansibleDir: ANSIBLE_DIR, ansibleCredentialsId: 'ansible-ssh', inventoryFile: INVENTORY_FILE)
            }
        }
    }
}
